@model WebSiteBanSach.Models.DonHang

@{
    ViewBag.Title = "ChinhSua";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<h2>Chỉnh sửa thông tin đơn hàng</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Đơn Hàng</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.MaDonHang, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <span style="font-size:15pt;margin-top:2px;margin-left:5px">@Model.MaDonHang</span>
                @Html.Hidden("MaDonHang", Model.MaDonHang)
            </div>
        </div>
        <br />
        <div class="form-group">
            @Html.LabelFor(model => model.NgayGiao, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NgayGiao)
                @Html.ValidationMessageFor(model => model.NgayGiao)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NgayDat, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NgayDat)
                @Html.ValidationMessageFor(model => model.NgayDat)
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.DaThanhToan, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.DaThanhToan)
                @Html.ValidationMessageFor(model => model.DaThanhToan)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TinhTrangGiaoHang, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TinhTrangGiaoHang)
                @Html.ValidationMessageFor(model => model.TinhTrangGiaoHang)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MaKH, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MaKH")
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </div>
        


    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
